{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "es6",
    "lib": ["es6", "dom"],
    "target": "es5",
    "types": [
      "reflect-metadata",
      "google-apps-script",
      "jest"
    ],
    "moduleResolution": "node",
    // inject
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // strict option
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
  },
  "include": [
    "./src/**/*",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  }
}
